/* pages/register_info/register_info.wxss */
.container {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 100vh;
  padding: 20px;
}

.register-form {
  width: 100%;
  max-width: 400px;
}

.input-group {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.input-label {
  white-space: nowrap;
  display: block;
  padding: 10px;
  border: 1px solid #ccc;
  margin-right: 10px;
  border-radius: 4px;
  text-align: center;
}

.input-label,
.input-field {
  flex: 0.25;
}

.input-field {
  flex-grow: 1;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.register-btn {
  background-color: #1aad19;
  color: white;
  padding: 10px;
  border: none;
  border-radius: 4px;
}