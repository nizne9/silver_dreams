/* pages/register_info/register_info.wxss */
.container {
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  padding: 20px;
}

.register-form {
  width: 100%;
  max-width: 400px;
}

.input-group {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-bottom: 20px;
}

.input-label {
  display: block;
  padding: 10px;
  font-size: 18px;
  font-weight: 700;
}

.input-field {
  display: block;
  padding: 20rpx;
  font-size: 18px;
  font-weight: 600;
  letter-spacing: 0.1em;
  background-color: #dddddd;
  border: 1px solid #dddddd;
  border-radius: 12rpx;
}

.register-btn {
  margin: 60rpx auto;
  background-color: #007AFF;
  text-align: center;
  font-size: 20px;
  letter-spacing: 0.25em;
  color: white;
  padding: 30rpx;
  border-radius: 16rpx;
}