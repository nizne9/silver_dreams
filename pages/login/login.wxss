/* pages/login/login.wxss */
.container {
  display: flex;
  justify-content: flex-start; 
  align-items: center;
  height: 100vh;
  padding: 20px;
}

.form-title {
  font-size: 24px;
  color: #333;
  text-align: center;
  margin-bottom: 30px;
}

.ad-space {
  font-size: 30px;
  text-align: center;
  margin-top: 100px;
  border: 1px solid;
  padding: 10px;
  border-radius: 4px;
}


.login-form {
  width: 100%;
  max-width: 400px;
}

.input-group {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.input-label {
  white-space: nowrap;
  display: block;
  padding: 10px;
  border: 1px solid #ccc;
  margin-right: 10px;
  border-radius: 4px;
  text-align: center;
}

.input-label, .input-field {
  flex: 0.25;
}

.input-field {
  flex-grow: 1;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.button-group {
  margin-top: 50px;
  display: flex;
  justify-content: space-between;
}

.login-button, .register-button {
  flex: 0.4;
  background-color: #1aad19;
  color: white;
  padding: 10px;
  border: none;
  border-radius: 4px;
}

