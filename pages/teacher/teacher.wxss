page {
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
}

.container {
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow-x: scroll;
  overflow-y: scroll;
}
.container::-webkit-scrollbar {
  width: 0 !important;
}
.container { -ms-overflow-style: none; }
.container { overflow: -moz-scrollbars-none; }

.order_item {
  padding: 20rpx;
  margin: 10rpx;
  display: flex;
  flex-direction: column;
  width: 90%;
  background-color: #fff;
}
.item_top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 15rpx;
}
.item_mid {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 15rpx;
}
.but {
  display: flex;
  margin: 0 0;
  padding: 10px;
  width: 90%;
}
.text{
  font-size: 15px;
}
.ad{
  width: 98%;
  height: 50%;
  margin: 5rpx;
  overflow: visible;
  
}
.admet{
  display: flex; flex-direction: column; justify-content: center; align-items: center;
}