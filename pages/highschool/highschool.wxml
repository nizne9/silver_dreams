<view class="container">
<swiper display-multiple-items="true">
  <swiper-item>
    <view>广告位</view>
  </swiper-item>
</swiper>
  <button type="primary" bind:tap="addorder">发布新订单</button>
  <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
    <view class="picker">订单筛选：{{array[index]}}</view>
  </picker>
  <view wx:for="{{item_list}}" wx:for-item="order" class="order_item">
    <view class="item_top">
      
      <view>{{order.subject}}</view>
      <view>{{order.hours}}课时</view> 
      <view>{{order.salary}}元/课时</view> 
    </view>
    <view class="item_mid">
      <view>{{order.begin}}~{{order.end}}</view>
      <view>{{order.student}}人</view>
      <button size="mini" plain="true" class="but" bind:tap='gotoPage'><text class="text">查看详情</text></button>
    </view>
    <view>订单状态</view>
  </view>
</view>
<fBar id="f-bar" idx="0"></fBar>